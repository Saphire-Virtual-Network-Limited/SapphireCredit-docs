{
	"$schema": "https://mintlify.com/docs.json",
	"theme": "mint",
	"name": "Sapphire Credit | Developers",
	"contextual": {
		"options": ["chatgpt"]
	},
	"appearance": { "default": "dark" },
	"seo": {
		"indexing": "navigable"
	},
	"search": {
		"prompt": "Search for documentation, API references, and more..."
	},
	"colors": {
		"primary": "#1F1F1F",
		"light": "#ffffff",
		"dark": "#121212"
	},
	"favicon": "/favicon.svg",
	"navigation": {
		"versions": [
			{
				"version": "1.0.0",
				"tabs": [
					{
						"tab": "Documentation",
						"groups": [
							{
								"group": "Get Started",
								"pages": ["introduction", "apikeys", "errors"]
							},

							{
								"group": "Services",
								"pages": ["services/liveness", "services/creditHistoryCheck"]
							}
						]
					},
					{
						"tab": "API Reference",
						"groups": [
							{
								"group": "API Documentation",
								"pages": ["api-reference/introduction"]
							},
							{
								"group": "Services APIs",
								"pages": ["api-reference/endpoint/bvn-check", "api-reference/endpoint/credit-check"]
							}
						]
					}
				]
			}
		]
	},
	"api": {
		"mdx": {
			"server": "https://connect.sapphirecredits.com/v1",
			"auth": {
				"method": "key",
				"name": "x-app-key"
			}
		},
		"playground": {
			"display": "interactive"
		}
	},

	"logo": {
		"light": "/images/logo/light.png",
		"dark": "/images/logo/dark.png"
	},

	"navbar": {
		"links": [
			{
				"label": "Support",
				"href": "mailto:support@sapphirecredits.com"
			}
		],
		"primary": {
			"type": "button",
			"label": "Dashboard",
			"href": "https://dashboard.sapphirecredits.com"
		}
	},
	"footer": {
		"socials": {
			"x": "https://x.com/sapphirecredits",
			"github": "https://github.com/sapphirecredits",
			"linkedin": "https://linkedin.com/company/sapphirecredits"
		}
	}
}
